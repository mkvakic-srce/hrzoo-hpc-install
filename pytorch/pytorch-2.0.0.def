Bootstrap: docker
From: ubuntu:20.04

%post  

  # apt
  apt update -y
  apt install software-properties-common -y
  apt install -y \
    build-essential \
    libbz2-dev \
    libffi-dev \
    libgdbm-dev \
    liblzma-dev \
    libncurses5-dev \
    libnss3-dev \
    libreadline-dev \
    libsqlite3-dev \
    libssl-dev \
    wget \
    zlib1g-dev

  # python 3.10.9
  cd /tmp
  version="3.10.9"
  wget -nc https://www.python.org/ftp/python/$version/Python-$version.tgz
  tar xf Python-$version.tgz
  cd Python-$version
  ./configure --enable-optimizations
  make -j 32
  make altinstall
  cd -
  rm -rf Python-$version

  # alternatives
  update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.8 1
  update-alternatives --install /usr/bin/python3 python3 /usr/local/bin/python3.10 2
  update-alternatives --install /usr/bin/pip3 pip3 /usr/local/bin/pip3.10 1
  yes 2 | update-alternatives --config python3
  yes 1 | update-alternatives --config pip3

  # pip
  pip3 install nvidia-pyindex
  pip3 install \
    accelerate==0.17.1 \
    lion-pytorch==0.0.7 \
    numpy==1.23.5 \
    scikit-learn==1.2.2 \
    torch==2.0.0 \
    torchvision \
    tqdm==4.65.0 \
    transformers

